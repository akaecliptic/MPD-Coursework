<resources>
    <!-- Developed by: Michael A. F. -->

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand colour -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_text_white</item>
        <!-- Text colour -->
        <item name="android:textColor">@color/color_text_black</item>
        <item name="fontFamily">@font/roboto_family</item>
        <!-- Status bar colour -->
        <item name="android:statusBarColor">@color/color_primary_dark</item>
    </style>

    <style name="EQuakeLayouts" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">@color/color_background_secondary</item>
    </style>

    <style name="EQuakeIcons">
        <item name="android:tint">@color/color_text_black</item>
    </style>

    <style name="EQuakeEdit">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:background">@color/color_background_primary</item>
        <item name="android:textColorHint">@color/color_text_grey</item>
    </style>

    <style name="EQuakeMinor" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_text_grey</item>
    </style>

    <style name="EQuakeTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/EQuakeTabText</item>
        <item name="tabIndicatorColor">@color/color_accent_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/color_primary</item>
        <item name="tabTextColor">@color/color_text_light_secondary</item>
        <item name="tabSelectedTextColor">@color/color_text_white</item>
    </style>

    <style name="EQuakeTabText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EQuakeDatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Header -->
        <item name="materialCalendarHeaderLayout">@style/MyCalendarHeaderLayout</item>
        <item name="materialCalendarHeaderSelection">@style/MyCalendarHeaderSelection</item>
        <item name="materialCalendarHeaderToggleButton">@style/MyCalendarHeaderToggle</item>
        <item name="materialCalendarHeaderTitle">@style/MyCalendarHeaderTitle</item>

        <!-- Colour -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_text_white</item>
        <item name="colorOnSurface">@color/color_text_black</item>
        <item name="colorSurface">@color/color_background_primary</item>

        <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearance</item>

        <!-- Button -->
        <item name="buttonBarPositiveButtonStyle">@style/MyCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyCalendarButton</item>
        <item name="materialButtonStyle">@style/MyCalendarTextButton</item>
    </style>

    <style name="MyCalendarHeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="MyStudentTag" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_label_id</item>
    </style>

    <style name="MyCalendarHeaderTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textAppearance">@style/CalendarTitleText</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="autoSizeMaxTextSize">25sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
    </style>

    <style name="CalendarTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyCalendarHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
    </style>

    <style name="MyCalendarHeaderToggle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/color_text_white</item>
    </style>

    <style name="MyShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="MyCalendarButton">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyCalendarTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="iconTint">@color/color_text_black</item>
    </style>
</resources>